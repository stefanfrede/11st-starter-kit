{
  "name": "11st-starter-kit",
  "version": "0.0.1",
  "description": "11ty + Snowpack + tailwindcss",
  "engines": {
    "node": "12.x.x",
    "npm": "6.x.x"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:stefanfrede/11st-starter-kit.git"
  },
  "keywords": [
    "11ty",
    "snowpack",
    "tailwindcss"
  ],
  "author": {
    "name": "Stefan Frede",
    "email": "contact@frede.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stefanfrede/11st-starter-kit/issues"
  },
  "homepage": "https://11st-starter-kit.netlify.app",
  "browserslist": [
    "defaults",
    "maintained node versions",
    "> 5%"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,md,html,css}": "prettier --write",
    "*.css": "stylelint --fix",
    "*.js": "eslint --fix"
  },
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf build && rimraf dist",
    "test": "echo \"This template does not include a test runner by default.\" && exit 1",
    "start": "run-s clean start:*",
    "start:snowpack": "snowpack dev",
    "build": "run-s clean build:*",
    "build:snowpack": "snowpack build",
    "lint": "npm run lint:eslint && npm run lint:prettier && npm run lint:stylelint",
    "lint:eslint": "eslint --ext src/**/*.js,.html src/",
    "lint:prettier": "prettier \"src/**/*.js\" --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "lint:stylelint": "stylelint src/**/*.js src/**/*.html src/**/*.css src/**/*.scss",
    "format": "npm run format:eslint && npm run format:prettier && npm run format:stylelint",
    "format:eslint": "eslint --ext src/**/*.js,.html src/ --fix",
    "format:prettier": "prettier \"src/**/*.js\" --write",
    "format:stylelint": "stylelint src/**/*.js src/**/*.html src/**/*.css --fix",
    "validate": "npm run build && npm run lint",
    "setup": "npm install && npm run validate"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "babel-eslint": "^10.1.0",
    "browserslist": "^4.14.3",
    "core-js": "^3.6.5",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-html": "^6.1.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "stylelint": "^13.7.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-order": "^4.1.0"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@snowpack/plugin-build-script": "^2.0.7",
    "@snowpack/plugin-run-script": "^2.1.2",
    "@snowpack/plugin-webpack": "^2.0.12",
    "@tailwindcss/typography": "^0.2.0",
    "canvas-confetti": "^1.2.0",
    "cssnano": "^4.1.10",
    "liquidjs": "^9.15.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.0.5",
    "postcss-cli": "^7.1.2",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.2",
    "snowpack": "^2.11.1",
    "tailwindcss": "^1.8.10"
  }
}
