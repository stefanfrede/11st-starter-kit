{
  "name": "11st-starter-kit",
  "description": "11ty, powered by Snowpack with Tailwind CSS and Alpine.js.",
  "version": "1.0.0",
  "engines": {
    "node": "12.x.x",
    "npm": "6.x.x"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:stefanfrede/11st-starter-kit.git"
  },
  "keywords": [
    "alpinjs",
    "eleventy",
    "netlify",
    "snowpack",
    "tailwindcss"
  ],
  "author": {
    "name": "Stefan Frede",
    "email": "stefan@frede.dev"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stefanfrede/11st-starter-kit/issues"
  },
  "homepage": "https://11st-starter-kit.netlify.app",
  "browserslist": [
    "defaults",
    "maintained node versions",
    "> 5%"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{md,html}": "prettier --write",
    "*.css": "stylelint --fix",
    "*.js": "eslint --fix"
  },
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf build && rimraf dist",
    "serve": "serve --no-clipboard --listen 8080 dist",
    "test": "echo \"This template does not include a test runner by default.\" && exit 1",
    "start": "run-s clean start:*",
    "start:snowpack": "snowpack dev --open none",
    "build": "run-s clean build:snowpack",
    "build:snowpack": "snowpack build",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --ext src/**/*.js,.html src/",
    "lint:prettier": "prettier \"src/**/*.js\" --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "lint:stylelint": "stylelint src/**/*.js src/**/*.html src/**/*.css src/**/*.scss",
    "format": "run-s format:*",
    "format:eslint": "eslint --ext src/**/*.js,.html src/ --fix",
    "format:prettier": "prettier \"src/**/*.js\" --write",
    "format:stylelint": "stylelint src/**/*.js src/**/*.html src/**/*.css --fix",
    "validate": "run-s build lint",
    "setup": "npm install && npm run validate"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "babel-eslint": "^10.1.0",
    "browserslist": "^4.14.5",
    "core-js": "^3.6.5",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-html": "^6.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "serve": "^11.3.2",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@snowpack/plugin-build-script": "^2.0.8",
    "@snowpack/plugin-optimize": "^0.2.3",
    "@snowpack/plugin-run-script": "^2.1.4",
    "@tailwindcss/typography": "^0.2.0",
    "alpinejs": "^2.7.0",
    "autoprefixer": "^10.0.1",
    "canvas-confetti": "^1.3.0",
    "liquidjs": "^9.15.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.1",
    "postcss-100vh-fix": "^1.0.2",
    "postcss-cli": "^8.0.0",
    "rimraf": "^3.0.2",
    "snowpack": "^2.13.2",
    "tailwindcss": "^1.8.10"
  }
}
