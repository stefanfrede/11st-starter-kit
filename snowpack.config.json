{
  "mount": {
    "build": "/",
    "src/scripts": "/_dist_"
  },
  "plugins": [
    [
      "@snowpack/plugin-build-script", {
        "cmd": "postcss", "input": [".css"], "output": [".css"]
      }
    ],
    [
      "@snowpack/plugin-run-script", {
        "cmd": "eleventy", "watch": "$1 --watch"
      }
    ],
    [
      "@snowpack/plugin-optimize", {
        "minifyCSS": false,
        "target": "es2020"
      }
    ]
  ],
  "installOptions": {
    "NODE_ENV": true
  },
  "devOptions": {
    "out": "dist"
  }
}
